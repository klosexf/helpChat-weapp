/* 输入区域组件样式 */

.input-area {
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 127, 212, 0.12);
  overflow: hidden;
}

.input-area__body {
  position: relative;
  padding: 32rpx;
  min-height: 240rpx;
}

.input-area__textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  color: #1A1A2E;
  line-height: 1.6;
  padding-bottom: 40rpx;
}

.input-area__placeholder {
  color: #9B9BAB;
}

.input-area__count {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  font-size: 24rpx;
  color: #9B9BAB;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.input-area__footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(139, 127, 212, 0.1);
}

.input-area__actions {
  display: flex;
  gap: 24rpx;
}

.input-area__btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #F0EDFA;
  border-radius: 20rpx;
}

.input-area__btn:active {
  opacity: 0.9;
}

.input-area__btn--secondary {
  background: rgba(255, 255, 255, 0.85);
}

.input-area__btn-icon {
  font-size: 32rpx;
}

.input-area__btn-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #8B7FD4;
}
