/* 输入区域组件样式 */

.input-area {
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 127, 212, 0.12);
  overflow: hidden;
}

.input-area__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(139, 127, 212, 0.1);
}

.input-area__title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A2E;
}

.input-area__icon {
  font-size: 32rpx;
}

.input-area__count {
  font-size: 22rpx;
  color: #9B9BAB;
}

.input-area__body {
  padding: 24rpx 32rpx;
  min-height: 200rpx;
}

.input-area__textarea {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  color: #1A1A2E;
  line-height: 1.6;
}

.input-area__placeholder {
  color: #9B9BAB;
}

.input-area__footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(139, 127, 212, 0.1);
}

.input-area__actions {
  display: flex;
  gap: 24rpx;
}

.input-area__btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #F0EDFA;
  border-radius: 20rpx;
}

.input-area__btn:active {
  opacity: 0.9;
}

.input-area__btn--secondary {
  background: rgba(255, 255, 255, 0.85);
}

.input-area__btn-icon {
  font-size: 32rpx;
}

.input-area__btn-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #8B7FD4;
}
