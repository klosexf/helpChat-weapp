/* 回复卡片组件样式 */

.reply-card {
  background-color: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 127, 212, 0.12);
  transition: all 0.2s ease;
}

.reply-card--latest {
  border: 2rpx solid rgba(139, 127, 212, 0.15);
}

.reply-card--history {
  opacity: 0.85;
  background-color: rgba(255, 255, 255, 0.9);
}

.reply-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(139, 127, 212, 0.08);
}

.reply-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.reply-card__dimension-tag {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  line-height: 1.2;
}

.reply-card__actions {
  display: flex;
  align-items: center;
}

.reply-card__copy-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.reply-card__copy-btn:active {
  background-color: rgba(139, 127, 212, 0.1);
}

.reply-card__copy-btn--copied {
  background-color: rgba(127, 212, 168, 0.15);
}

.reply-card__copy-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #8B7FD4;
  transition: color 0.2s ease;
}

.reply-card__copy-btn--copied .reply-card__copy-text {
  color: #7FD4A8;
}

.reply-card__content {
  padding-top: 8rpx;
}

.reply-card__text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #1A1A2E;
  font-weight: 500;
  display: block;
  word-wrap: break-word;
}

/* 历史回复样式 */
.reply-card--history .reply-card__text {
  font-size: 28rpx;
  color: #6B6B7B;
}

.reply-card--history .reply-card__dimension-tag {
  opacity: 0.8;
}
