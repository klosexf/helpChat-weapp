/* 历史建议区域组件样式 */

.history-section {
  margin-top: 32rpx;
}

/* 展开/收起按钮 */
.history-section__toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 0;
  transition: all 0.2s ease;
}

.history-section__toggle:active {
  opacity: 0.7;
}

.history-section__toggle-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #9B9BAB;
  letter-spacing: 0.02em;
}

.history-section__toggle-icon {
  transition: transform 0.3s ease;
}

.history-section__toggle-icon--expanded {
  transform: rotate(180deg);
}

/* 历史内容区域 */
.history-section__content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease;
}

.history-section__content--expanded {
  max-height: 3000rpx;
  padding-top: 16rpx;
}

/* 历史分组 */
.history-section__group {
  margin-bottom: 48rpx;
}

.history-section__group:last-child {
  margin-bottom: 0;
}

/* 时间线头部 */
.history-section__timeline-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.history-section__timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #C5C5D3;
  flex-shrink: 0;
}

.history-section__timeline-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #6B6B7B;
}

/* 话术列表 */
.history-section__list {
  padding-left: 16rpx;
}

/* 单个话术建议项 */
.history-suggestion-item {
  display: flex;
  margin-bottom: 32rpx;
}

.history-suggestion-item:last-child {
  margin-bottom: 0;
}

/* 时间线 */
.history-suggestion-item__timeline {
  position: relative;
  width: 32rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
}

.history-suggestion-item__timeline-line {
  width: 2rpx;
  height: 100%;
  background-color: #E8E8F0;
}

/* 内容区域 */
.history-suggestion-item__content {
  flex: 1;
  padding-left: 16rpx;
}

/* 头部：标签和复制按钮 */
.history-suggestion-item__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-suggestion-item__tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background-color: #F5F5F8;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #9B9BAB;
  border: 1rpx solid #E8E8F0;
}

.history-suggestion-item__copy {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.history-suggestion-item__copy:active {
  background-color: rgba(139, 127, 212, 0.1);
}

/* 话术内容 */
.history-suggestion-item__body {
  padding-right: 16rpx;
}

.history-suggestion-item__text {
  font-size: 30rpx;
  line-height: 1.7;
  color: #6B6B7B;
  font-style: italic;
  display: block;
  word-wrap: break-word;
}
