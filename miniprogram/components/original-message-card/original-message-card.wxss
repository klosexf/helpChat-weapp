/* 原始消息卡片组件样式 */

.original-message-card {
  background-color: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 127, 212, 0.12);
}

.original-message-card__header {
  margin-bottom: 20rpx;
}

.original-message-card__label {
  font-size: 22rpx;
  font-weight: 600;
  color: #9B9BAB;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.original-message-card__content {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.original-message-card__avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.original-message-card__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.original-message-card__text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #1A1A2E;
  font-weight: 500;
  word-wrap: break-word;
}

.original-message-card__meta {
  font-size: 24rpx;
  color: #9B9BAB;
  font-weight: 500;
}
